type Query {
    otherProjects: [OtherProject]!
    otherProject(id: ID!): OtherProject
    paintings: [Painting]!
    painting(id: ID!): Painting
    ceramicWares: [CeramicWare]!
    ceramicWare(id: ID!): CeramicWare
    woodWorks: [WoodWork]!
    woodWork(id: ID!): WoodWork
}

type WoodWork implements Project {
    id: ID!
    name: String!
    icon: ProjectImage!
    links: [ProjectLink!]!
    date: String!
    description: String!
    images: [ProjectImage!]!
    materials: String!
    finish: String!
    height: Float!
    width: Float!
    depth: Float!
}

type CeramicWare implements Project {
    id: ID!
    name: String!
    icon: ProjectImage!
    links: [ProjectLink!]!
    date: String!
    description: String!
    images: [ProjectImage!]!
    clayBody: String!
    glaze: String!
    height: Float!
    width: Float!
    depth: Float!
}

type Painting implements Project {
    id: ID!
    name: String!
    icon: ProjectImage!
    links: [ProjectLink!]!
    date: String!
    description: String!
    images: [ProjectImage!]!
    surface: String!
    varnished: Boolean!
    height: Float!
    width: Float!
}

type OtherProject implements Project {
    id: ID!
    name: String!
    icon: ProjectImage!
    links: [ProjectLink!]!
    date: String!
    description: String!
    images: [ProjectImage!]!
}

interface Project {
    id: ID!
    name: String!
    icon: ProjectImage!
    links: [ProjectLink!]!
    date: String!
    description: String!
    images: [ProjectImage!]!
}

type ProjectLink {
    url: String!
    text: String!
}

type ProjectImage {
    full: String!
    half: String!
    quarter: String!
    alt: String!
    neverOverlap: Boolean!
}
