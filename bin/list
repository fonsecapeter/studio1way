#!/usr/bin/env bash
# List all commands ðŸ“‹
set -eu -o pipefail

tput sgr0
for file in bin/*; do
  name=$( \
    echo $file \
    | sed 's@bin\/@@g' \
  )
  description=$( \
    cat "$file" | \
    head -n 2 | \
    tail -n 1 | \
    sed 's/# //'\
  )
  if [[ "${description}" == 'Helper' ]]; then
    continue
  fi
  printf \
    "  $(tput setaf 2)%.24s$(tput sgr0)%s\n" \
    "${name}$(tput setaf 8)............................" \
    "${description}"
done
