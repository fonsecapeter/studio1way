#!/usr/bin/env bash
# List front-end commands ðŸ“‹
set -eu -o pipefail

printf "\n$(tput setaf 6)front-end:$(tput sgr0)\n"

for file in bin/fe/*; do
  if [ -d $file ]; then
    continue
  fi
  name=$( \
    echo $file \
    | sed 's@bin\/@@g' \
  )
  description=$( \
    cat "$file" | \
    head -n 2 | \
    tail -n 1 | \
    sed 's/# //'\
  )
  if [[ "${description}" == 'Helper' ]]; then
    continue
  fi
  printf \
    "  $(tput setaf 2)%.24s$(tput sgr0)%s\n" \
    "${name}$(tput setaf 8)............................" \
    "${description}"
done
